@using MotorDoctor.Core.Enum
@model ShopFilterDto
@section Styles {

    <link rel="stylesheet" href="~/assets/css/shop.css" />
}
<br />
<br />
<br />
<br />

<!-- Shop section Start -->
<main>
    <div class="container-fluid  ">
        <form method="post" class="container shopFilterForm">
            <div class="row g-4">
                <div class="col-lg-3">
                    <div class="row g-4">

                        <div class="col-lg-12">
                            <div class="mb-3">
                                <div class="container mt-4  ">
                                    <div class="filter-sidebar" style="overflow:hidden">
                                        <p class="results">Showing 1–12 of 27 results</p>
                                        <div class="accordion" id="filterAccordion">

                                            <!-- Category Filter -->
                                            <div class="accordion-item">
                                                <h2 class="accordion-header" id="headingCategory">
                                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                            data-bs-target="#collapseCategory" aria-expanded="false" aria-controls="collapseCategory">
                                                        Category
                                                    </button>
                                                </h2>
                                                <div id="collapseCategory" class="accordion-collapse collapse"
                                                     aria-labelledby="headingCategory">
                                                    <div class="accordion-body">
                                                        <ul class="list-unstyled">
                                                            @foreach (var category in Model.Categories)
                                                            {
                                                                <li class="form-check">
                                                                    <label class="form-check-label w-100 d-flex align-items-center" for="category-@category.Id">
                                                                        @{
                                                                            string isCheckBrand = Model.ProductFilterDto?.CategoryIds.Any(x => x == category.Id) ?? false ? "checked" : "";
                                                                            <input value="@category.Id"
                                                                                   name="ProductFilterDto.CategoryIds"
                                                                                   class="form-check-input me-2"
                                                                                   type="checkbox"
                                                                                   id="category-@category.Id"
                                                                            @isCheckBrand>
                                                                        }
                                                                        @category.Name
                                                                    </label>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </div>

                                                </div>
                                            </div>

                                            <!-- Brand Filter -->
                                            <div class="accordion-item">
                                                <h2 class="accordion-header" id="headingBrand">
                                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                                            data-bs-target="#collapseBrand" aria-expanded="false" aria-controls="collapseBrand">
                                                        Brand
                                                    </button>
                                                </h2>
                                                <div id="collapseBrand" class="accordion-collapse collapse" aria-labelledby="headingBrand">
                                                    <div class="accordion-body">
                                                        <ul class="list-unstyled">
                                                            @foreach (var brand in Model.Brands)
                                                            {
                                                                <li class="form-check">
                                                                    <label class="form-check-label w-100 d-flex align-items-center" for="brand-@brand.Id">
                                                                        @{
                                                                            string isCheckBrand = Model.ProductFilterDto?.BrandIds.Any(x => x == brand.Id) ?? false ? "checked" : "";
                                                                            <input value="@brand.Id"
                                                                                   name="ProductFilterDto.BrandIds"
                                                                                   class="form-check-input me-2"
                                                                                   type="checkbox"
                                                                                   id="brand-@brand.Id"
                                                                            @isCheckBrand>
                                                                        }
                                                                        @brand.Name
                                                                    </label>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </div>

                                                </div>
                                            </div>


                                            <!-- Price Filter (Always Visible) -->
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button" type="button" disabled>
                                                        Price
                                                    </button>
                                                </h2>
                                                <div class="accordion-body">
                                                    <div class="price-slider">
                                                        <input type="range" asp-for="ProductFilterDto!.MinPrice" min="0" max="1000" value="@(Model.ProductFilterDto?.MinPrice ?? 0)" class="mt-2 form-range" id="minPrice">
                                                        <input type="range" asp-for="ProductFilterDto!.MaxPrice" min="0" max="1000" value="@(Model.ProductFilterDto?.MaxPrice ?? 1000)" class="mt-2 form-range" id="maxPrice">
                                                        <div class="price-values d-flex justify-content-between">
                                                            <span id="minPriceValue">₼@(Model.ProductFilterDto?.MinPrice ?? 0)</span>
                                                            <span id="maxPriceValue">₼@(Model.ProductFilterDto?.MaxPrice ?? 1000)</span>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <button class="btn btn-outline-dark w-100 mt-3">Filter</button>
                                        <a class="btn btn-outline-dark w-100 mt-3" asp-action="Index">Clear Filter</a>

                                        <div class="input-group mt-4">
                                            <input type="text" class="form-control shopFilterSearchInput" asp-for="ProductFilterDto!.Search" placeholder="Search products..."
                                                   aria-label="Search products" aria-describedby="search-icon">
                                            <span class="input-group-text" id="search-icon">
                                                <i style="cursor: pointer;"
                                                   class="fa-solid fa-magnifying-glass"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div style="margin-top: 20px; right: 122px; position: absolute; z-index: 111;" class="dropdown">
                        <select class="form-select"
                                style="appearance: none; border: none; outline: none; padding: 5px; background: transparent; color: inherit; font-size: inherit; text-align: center; border-radius: 0px; cursor: pointer;"
                                id="sortSelect"
                                asp-for="ProductFilterDto!.SortType">
                            <option value="@SortTypes.Latest" selected>SORT BY LATEST</option>
                            <option value="@SortTypes.Oldest">SORT BY OLDEST</option>
                            <option value="@SortTypes.Popularity">SORT BY POPULARITY</option>
                            <option value="@SortTypes.PriceDescending">SORT BY PRICE HIGH TO LOW</option>
                            <option value="@SortTypes.PriceAscending">SORT BY PRICE LOW TO HIGH</option>
                        </select>
                    </div>


                    <div id="featured-products">
                        <div class="featured-products-container position-relative">
                            <div class="row">
                                @if (Model.Products.Items.Count > 0)
                                {
                                    @foreach (var product in Model.Products.Items)
                                    {
                                        <div class="featured-products-card col-lg-4 col-md-6 col-12" data="fitness">
                                            <button class="add-to-fav-button">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16.932" height="16" viewBox="0 0 16.932 16">
                                                    <path d="M8.467 16a1.756 1.756 0 0 1-.94-.273c-.67-.422-6.576-4.254-7.425-8.776a6.154 6.154 0 0 1 1.27-4.977A5.177 5.177 0 0 1 5.356 0a4.369 4.369 0 0 1 3.111 1.086A4.185 4.185 0 0 1 11.577 0a5.18 5.18 0 0 1 3.983 1.973 6.157 6.157 0 0 1 1.269 4.977c-.849 4.522-6.755 8.354-7.426 8.777a1.753 1.753 0 0 1-.936.273ZM5.356 2A3.186 3.186 0 0 0 2.92 3.241a4.133 4.133 0 0 0-.853 3.341c.646 3.439 5.543 6.806 6.4 7.371.857-.565 5.754-3.932 6.4-7.371a4.136 4.136 0 0 0-.851-3.341A3.192 3.192 0 0 0 11.577 2a3.021 3.021 0 0 0-2.354 1.122 1 1 0 0 1-.756.346 1 1 0 0 1-.756-.345A3.024 3.024 0 0 0 5.356 2Z">
                                                    </path>
                                                </svg>
                                            </button>

                                            <a href="./product-detail.html?id=1">
                                                <span class=""></span>
                                                <span class=""></span>

                                                <div class="swiper productCardSlider swiper-initialized swiper-horizontal swiper-backface-hidden">
                                                    <div class="swiper-wrapper" id="swiper-wrapper-c347a114ec1613e9" aria-live="polite">
                                                        <div class="swiper-slide swiper-slide-active" role="group" aria-label="1 / 5"
                                                             data-swiper-slide-index="0" style="width: 251px; margin-right: 30px">
                                                            <img src="@product.MainImagePath"
                                                                 alt="@product.Name" />
                                                        </div>

                                                        @foreach (var imagePath in product.ImagePaths)
                                                        {
                                                            <div class="swiper-slide swiper-slide-next" role="group" aria-label="2 / 5"
                                                                 data-swiper-slide-index="1" style="width: 251px; margin-right: 30px">
                                                                <img src="@imagePath"
                                                                     alt="@product.Name" />
                                                            </div>
                                                        }

                                                    </div>
                                                    <button>

                                                        <div class="swiper-button-next" tabindex="0" role="button" aria-label="Next slide"
                                                             aria-controls="swiper-wrapper-c347a114ec1613e9"></div>
                                                    </button>
                                                    <button>
                                                        <div class="swiper-button-prev" tabindex="0" role="button" aria-label="Previous slide"
                                                             aria-controls="swiper-wrapper-c347a114ec1613e9"></div>
                                                    </button>
                                                    <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
                                                </div>
                                            </a>
                                            <div class="product-card-content">
                                                <a href="./product-detail.html?id=1"> </a><a href="#">@product.Brand.Name</a>
                                                <a href="#" class="product-title">@product.Name</a>
                                                <a href="#" class="product-category">@product.Category.Name</a>
                                                <div>
                                                    <span>$@product.ProductSizes.FirstOrDefault()?.Price</span>

                                                    <span style="
                                  color: #727272;
                                  text-decoration: line-through;
                                                                                                                                                                                                                                                                                                                        "></span>
                                                </div>
                                            </div>

                                            <button class="add-to-basket-button">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="17" viewBox="0 0 15 17">
                                                    <path d="M14 3.5h-3a3.5 3.5 0 0 0-7 0H1a1 1 0 0 0-1 1V15a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V4.5a1 1 0 0 0-1-1ZM7.5 2A1.5 1.5 0 0 1 9 3.5H6A1.5 1.5 0 0 1 7.5 2ZM13 15H2V5.5h2v1a1 1 0 0 0 2 0v-1h3v1a1 1 0 0 0 2 0v-1h2Z">
                                                    </path>
                                                </svg>
                                            </button>
                                        </div>
                                    }

                                    <div class="pagination-container">
                                        <ul class="pagination">
                                            <li class="page-item"><a data-page="@(Model.Products.CurrentPage - 1)" class="page-link">&laquo;</a></li>
                                            @for (int i = 1; i <= Model.Products.PageCount; i++)
                                            {
                                                <li class="page-item @(Model.Products.CurrentPage==i ? "active" :"")"><a data-page="@i" class="page-link">@i</a></li>
                                            }
                                            <li class="page-item"><a data-page="@(Model.Products.CurrentPage + 1)" class="page-link">&raquo;</a></li>

                                        </ul>
                                    </div>

                                }
                                else
                                {

                                    <div class="  text-center py-4 border border-top-1 border-bottom-1">
                                        <p class="m-0 fw-bold">NO PRODUCTS FOUND</p>
                                    </div>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>
<!-- Shop section End -->
@section Scripts {
    <script>

        const sortSelect=document.getElementById("sortSelect");
        const form=document.querySelector(".shopFilterForm");
        const shopSearchInput=document.querySelector(".shopFilterSearchInput")
        const paginationButtons=document.querySelectorAll('.page-link');

        paginationButtons.forEach(btn=>{
            btn.addEventListener('click',()=>{

                const page = btn.dataset.page;
                const currentUrl = new URL(form.action || window.location.href);
                currentUrl.searchParams.set('page', page);
                form.action = currentUrl.toString();
                form.submit();        
            })
        })

        shopSearchInput.addEventListener("keydown", function (event) {
            if (event.key === "Enter") {
                form.submit();
            }
        });

        sortSelect.addEventListener("change", function () {
                    form.submit();
        });

        document.addEventListener('DOMContentLoaded', function() {
        const dropdownItems = document.querySelectorAll('.dropdown-item');
        const dropdownButton = document.getElementById('dropdownMenuButton');

        dropdownItems.forEach(item => {
            item.addEventListener('click', function(e) {
                    e.preventDefault();

                    const selectedValue = this.getAttribute('data-value');
                    dropdownButton.textContent = selectedValue;

                    dropdownItems.forEach(item => item.classList.remove('active'));

                    this.classList.add('active');
                });
            });
        });

         const minPrice = document.getElementById("minPrice");
         const maxPrice = document.getElementById("maxPrice");
         const minPriceValue = document.getElementById("minPriceValue");
         const maxPriceValue = document.getElementById("maxPriceValue");

         minPrice.addEventListener("input", () => {
             if (parseInt(minPrice.value) > parseInt(maxPrice.value)) {
                 minPrice.value = maxPrice.value;
             }
             minPriceValue.textContent = `₼${minPrice.value}`;
         });

         maxPrice.addEventListener("input", () => {
             if (parseInt(maxPrice.value) < parseInt(minPrice.value)) {
                 maxPrice.value = minPrice.value;
             }
             maxPriceValue.textContent = `₼${maxPrice.value}`;
         });
    </script>
} 