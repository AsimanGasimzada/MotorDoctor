@model ResetPasswordDto
@inject AccountLocalizer _localizer
<!-- Main Start -->
<main id="main">

    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row flex-grow">
                <div class="col-lg-12 col-12 mx-auto">
                    <div class="auth-form-light text-left p-5 border rounded shadow-lg">
                        <div class="brand-logo mb-4 text-center" style="max-width:200px;max-height:auto;overflow:hidden;margin:0 auto">
                            <img src="~/assets/img/logo.png" alt="Logo" class="img-fluid">
                        </div>
                        <h4 class="mb-4 text-center">@_localizer.GetValue("Hello")</h4>
                        <h6 class="font-weight-light mb-4 text-center">@_localizer.GetValue("ResetPasswordTitle")</h6>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <form class="pt-3" method="post">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" />
                            <div class="form-group mb-3">
                                <label for="username">@_localizer.GetValue("Password")</label>
                                <input asp-for="Password" class="form-control" id="username"
                                       aria-describedby="emailHelp">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="username">@_localizer.GetValue("ConfirmPassword")</label>
                                <input asp-for="ConfirmPassword" class="form-control" id="username"
                                       aria-describedby="emailHelp">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn custom-button2">@_localizer.GetValue("ResetPasswordButton")</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                @_localizer.GetValue("DontHaveAccount") <a asp-action="Register" asp-controller="Account"
                                                                           class="text-primary">@_localizer.GetValue("Register")</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
